<!DOCTYPE html>
<html>
<head>
	<title>Sides Recipes</title>
</head>
<body>
	<h1> Sides Recipes</h1>

<div class="container">
	 <div class="row">
	
	   	<% @recipes.each do |recipe| %> 	

	     <div class="four columns" style="font-size: 20px">
		     <h3><%= recipe.name %> </h3>
			 <img class ="resize" src= '<%= recipe.image_url%>'/>
		   	 <p> <%= recipe.description %> </p>
		   	  <h4>Ingredients:</h4>
		   	 <h4><% recipe.ingredients.each do |ingredient|%> 
		   	 <p> <%= ingredient.name %> </p>
		   	  <%end%></h4>
		
		    
		    <h4>Instructions</h4>
		    <p> <%= recipe.instructions %> </p>
		  </div>

		  <% end %> 
	
	    
	  </div>
	</div>

</body>
</html>