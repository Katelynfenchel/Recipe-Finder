<!DOCTYPE html>
<html>
<head>
	<title>Breakfast Recipes</title>
</head>
<body>
	<h1>Breakfast Recipes</h1>

	<div class="container">
	 <div class="row">
	
	   	<% @recipes.each do |recipe| %> 	

	     <div class="four columns" style="font-size: 20px">
		     <h3><%= recipe.name %> </h3>
			 <img class ="resize" src= '<%= recipe.image_url%>'/>
		   	 <p> <%= recipe.description %> </p>
		   	  <ul>Ingredients:</ul>
		   	 <h4 class="ingredients"><% recipe.ingredients.each do |ingredient|%> 
		   	 <li> <%= ingredient.name %> </li>
		   	  <%end%></h4>

		    
		    <h4>Instructions</h4>
		    <p> <%= recipe.instructions %> </p>
		  </div>

		  <% end %> 
	

	    
	  </div>
	</div>

</body>
</html>